<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CongratulationFragment">

    <FrameLayout
        android:id="@+id/confetti_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:alpha="0.8"/>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/view_confetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/congratulation_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Вы получаете"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/congratulation_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/congratulation_text_1"
        android:text="N"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/congratulation_text_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="баллов"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/congratulation_text_2" />

</androidx.constraintlayout.widget.ConstraintLayout>