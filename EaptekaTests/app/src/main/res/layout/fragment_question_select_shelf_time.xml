<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_clock" />

        <com.eapteka.eaptekatests.custom_view.CustomGradientTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="ПОКАЗАНИЯ"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/desc_color"
            style="@style/TextViewDesc"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/b_minus"
                android:layout_width="@dimen/arrow_size"
                android:layout_height="@dimen/arrow_size"
                android:background="@drawable/ic_arrow"
                />

            <com.eapteka.eaptekatests.custom_view.CustomViewCrossOut
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:includeFontPadding="false"
                android:textStyle="bold"
                tools:text="1" />


            <ImageButton
                android:id="@+id/b_plus"
                android:layout_width="@dimen/arrow_size"
                android:layout_height="@dimen/arrow_size"
                android:background="@drawable/ic_arrow"
                android:rotation="180"
                />
        </LinearLayout>

        <com.eapteka.eaptekatests.custom_view.CustomGradientTextView
            android:id="@+id/b_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="готово" />

        <com.eapteka.eaptekatests.custom_view.CustomGradientTextView
            android:id="@+id/b_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="@string/next" />

    </LinearLayout>
</ScrollView>